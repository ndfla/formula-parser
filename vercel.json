{  "builds": [
        { "src": "requirements.txt", "use": "@vercel/static" },
        { "src": "api/static/*js", "use": "@vercel/static" },
        { "src": "api/templates/index.html", "use": "@vercel/static" },
        { "src": "api/static/module/*js", "use": "@vercel/static" },
        { "src": "api/static/module/AudioWorkletProcessor/*js", "use": "@vercel/node" },
        { "src": "api/static/main.js", "use": "@vercel/node" },
        { "src": "api/server.py", "use": "@vercel/python" },
        { "src": "api/util/*.py", "use": "@vercel/python" }
    ],

    "rewrites": [
        { 
            "source": "/(.*)", 
            "destination": "/api/server" 
        }
    ]
}